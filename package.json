{
  "name": "cron-safe",
  "version": "1.1.0",
  "description": "A robust wrapper around node-cron with automatic retries, overlap prevention, execution timeout, history tracking, and structured error handling",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cron",
    "cron-job",
    "cron-scheduler",
    "scheduler",
    "node-cron",
    "node-cron-wrapper",
    "retry",
    "automatic-retry",
    "retry-mechanism",
    "overlap",
    "overlap-prevention",
    "fault-tolerant",
    "reliable",
    "job-scheduler",
    "task-scheduler",
    "background-jobs",
    "scheduled-tasks",
    "nodejs",
    "typescript",
    "async",
    "error-handling",
    "production-ready",
    "timeout",
    "execution-timeout",
    "history",
    "audit-log"
  ],
  "author": "Rohit Kumar Kashyap <rohitkashyapmrt@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rohit-jsfreaky/cron-safe.git"
  },
  "homepage": "https://github.com/rohit-jsfreaky/cron-safe#readme",
  "bugs": {
    "url": "https://github.com/rohit-jsfreaky/cron-safe/issues"
  },
  "dependencies": {
    "cron-parser": "^4.9.0"
  },
  "peerDependencies": {
    "node-cron": ">=3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "node-cron": "^3.0.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
